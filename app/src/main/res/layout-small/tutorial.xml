<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/howlay"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/currentImage"
            android:layout_width="fill_parent"
            android:layout_height="155dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true" />

<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarFadeDuration="0"
    android:id="@+id/tutTextScroll"
     android:layout_above="@+id/prevImage"
     
      android:layout_below="@+id/currentImage">
        <TextView
            android:id="@+id/tutText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal" 
            android:text="This tutorial will teach you how to use and get the most out of CramSlam."
            android:textSize="19dp" /></ScrollView>

        <CheckBox
            android:id="@+id/doNotShowAgain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Do Not Display Again" 
            android:layout_above="@+id/closeHow"/>

        <Button
            android:id="@+id/closeHow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Close"
            android:textSize="20dp" />

        <Button
            android:id="@+id/prevImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/doNotShowAgain"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="10dp"
            android:text="Pervious"
            android:textSize="15dp" />

        <Button
            android:id="@+id/nextImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/prevImage"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:text="Next" />
        
         <TextView
            android:id="@+id/pageNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextImage"
            android:layout_alignBottom="@+id/closeHow"
           android:gravity="bottom|center_horizontal"
            android:layout_alignParentRight="true"
            android:text="PageNumber" />

    </RelativeLayout>

