<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="toolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="actionBarStyle">@style/ActionBarStyle</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="time_digit_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="time_indicator_style" parent="time_digit_style">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_centerVertical">false</item>
        <item name="android:layout_margin">0dp</item>
    </style>

    <style name="timeIncrementButtons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">22dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="noteCardDateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="divider_bullet_point">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:text">@string/bullet_point</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

</resources>