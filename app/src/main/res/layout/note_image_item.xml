<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/note_image_item_vertical_padding"
    android:layout_marginTop="@dimen/note_image_item_vertical_padding"
    android:layout_marginLeft="@dimen/note_image_item_horizontal_padding"
    android:layout_marginRight="@dimen/note_image_item_horizontal_padding"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/noteImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_selector"
        android:padding="4dp"
        tools:src="@drawable/image_icon" />

</LinearLayout>