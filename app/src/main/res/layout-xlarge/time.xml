<?xml version="1.0" encoding="utf-8"?>
<!-- android:background="#f26522" -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/TimeBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/cramslam_app_background_blue"
    android:orientation="vertical"
    android:textColor="#000000" >
    <!-- android:background="@drawable/orange_background" -->

    <!-- android:background="#f26522" -->

    <Button
        android:id="@+id/StartButton"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="@drawable/startbutton"
        android:padding="20dp" >
    </Button>

    <Button
        android:id="@+id/StopButton"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="@drawable/stopbutton"
        android:padding="20dp" >
    </Button>

    <Button
        android:id="@+id/alarmstop"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1dp"
        android:adjustViewBounds="true"
        android:background="@drawable/alarmbutton"
        android:padding="20dp" >
    </Button>

    <Button
        android:id="@+id/IncreaseButton"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/StartButton"
        android:layout_marginLeft="14dp"
        android:adjustViewBounds="true"
        android:background="@drawable/pulbutton" >
    </Button>

    <Button
        android:id="@+id/DecreaseButton"
        android:layout_width="220dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/StartButton"
        android:layout_marginRight="14dp"
        android:adjustViewBounds="true"
        android:background="@drawable/negitivebutton" >
    </Button>

    <TextView
        android:id="@+id/totaltime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DecreaseButton"
        android:gravity="center"
        android:text="@string/totaltime"
        android:textColor="#000000"
        android:textSize="45dp"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:id="@+id/showiggy"
        android:layout_width="410dp"
        android:layout_height="410dp"
        android:layout_above="@+id/timescreenads"
        android:layout_alignParentRight="true"
        android:adjustViewBounds="true" />
    <!--
android:src="@drawable/iggy"
android:layout_width="165dp"
android:layout_height="160dp"
android:adjustViewBounds="true"-->

    <Button
        android:id="@+id/infobutton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/timescreenads"
        android:layout_alignParentLeft="true"
        android:adjustViewBounds="true"
        android:background="@drawable/infobutton" >
    </Button>

    <ScrollView
        android:id="@+id/scrollTalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/showiggy"
        android:layout_marginBottom="95dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/text"
        android:visibility="gone" >

        <TextView
            android:id="@+id/iggypoptalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:includeFontPadding="false"
            android:paddingTop="2dp"
            android:singleLine="false"
            android:textColor="#000000"
            android:textSize="20dp" >
        </TextView>
    </ScrollView>

    <com.google.ads.AdView
        android:id="@+id/timescreenads"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="a14f83aafa7d41a"
        ads:loadAdOnCreate="true"
        ads:testDevices="TEST_EMULATOR,TEST_DEVICE_ID" />
    <!-- android:layout_alignTop="@+id/totaltime" -->

</RelativeLayout>